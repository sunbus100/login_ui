<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- 设置选中时的背景颜色 -->
            <size android:width="24dp" android:height="24dp" /> <!-- 设置圆的尺寸 -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- 设置未选中时的边框 -->
            <size android:width="24dp" android:height="24dp" /> <!-- 设置圆的尺寸 -->
        </shape>
    </item>
</selector>